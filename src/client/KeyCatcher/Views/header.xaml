            <Label Text="{Binding Title, Source={x:Reference Name=headerBarRoot}}" />
            <Label
                Text="Welcome to .NET MAUI!"
                VerticalOptions="Center"
                HorizontalOptions="Center" />
        </VerticalStackLayout>-->
    </ContentView>
