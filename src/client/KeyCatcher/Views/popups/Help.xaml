<toolkit:Popup
    x:Class="KeyCatcher.Help"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    
    BackgroundColor="Black"
    Padding="24">
    <!--CanBeDismissedByTappingOutside="True">-->
<!--Size="350,Auto"-->
        <VerticalStackLayout Spacing="16">
            <Label Text="Having Trouble Connecting?" FontAttributes="Bold" FontSize="22"/>
            <Label Text="No Wi-Fi or Bluetooth connection detected." FontSize="16" TextColor="#444"/>
            <BoxView HeightRequest="1" Color="#E3DDCF" Margin="0,4"/>
            <Label Text="Try the following:" FontAttributes="Bold"/>
            <Label TextColor="Grey"                   >
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="• Make sure your KeyCatcher is powered on and in range.&#10;"/>
                        <Span Text="• Is Bluetooth enabled on your device?&#10;"/>
                        <Span Text="• Is Wi-Fi enabled and connected to the same network?&#10;"/>
                        <Span Text="• Try unplugging and replugging the KeyCatcher.&#10;"/>
                        <Span Text="• Restart the app."/>
                    </FormattedString>
                </Label.FormattedText>
            </Label>
            <HorizontalStackLayout Spacing="16" HorizontalOptions="Center">
                <Button Text="Contact Support" Clicked="OnContactClicked"/>
                <Button Text="Close" Clicked="OnCloseClicked"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </toolkit:Popup>
